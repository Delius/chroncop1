</div>
  <div class="form-group">
    <%= f.label :condition_name_id %><br>
    <%= f.select(:condition_name_id,
   options_from_collection_for_select(ConditionName.all, :id, :name),
  {:prompt =>'Please Choose'}, :class => "form-control") %>
  </div>
   <div class="form-group">
    <%= f.label :symptom_name_id %><br>
    <%= f.select( :symptom_name_id,
  options_from_collection_for_select(SymptomName.all, :id, :name),
  {:prompt => 'Please Choose'}, :class => "form-control") %>
  </div>
  <div class="form-group">
    <%= f.label :tip_type_id %><br>
    <%= f.select( :tip_type_id,
        options_from_collection_for_select(TipType.all, :id, :name),
        {:prompt => 'Please Choose'}, :class => "form-control") %>
  </div>
  <div class="field">
    <%= f.label :what_needed %><br>
    <%= f.text_area :what_needed %>
  </div>
  <div class="field">
    <%= f.label :my_tip %><br>
    <%= f.text_area :my_tip %>
  </div>
