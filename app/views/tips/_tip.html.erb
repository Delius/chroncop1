<!-- this is part of profile view listing user Tips -->
<table>

  <thead >

    <tr>
      <th>TIP TITLE  </th>

| <%= pluralize tip.reputation_for(:votes).to_i, "vote" %>
<% if current_user && !current_user.voted_for?(tip) %>
  | <%= link_to "up", vote_tip_path(tip, type: "up"), method: "post" %>
  | <%= link_to "down", vote_tip_path(tip, type: "down"), method: "post" %>
<% end %>
      <th>Condition name </th>
      <th>Tag</th>
      <th >---------------</th>
    </tr>
  </thead>

     <tbody>
     

      <tr>
        <td ><%= tip.title %></td>
        
        <td><%= tip.condition_name.name %></td>
        <td><%= tip.symptom_name.name %></td>

        <td><% for tag in tip.tags %>
         <%= link_to tag.name, tagged_url(:tag => tag.name) %>
         <% end %></td>
         
         
         
         <td><%= link_to 'Show', tip, class: 'button tiny radius success' %>
          <% if user_signed_in? %>
          <% if tip.user == current_user %>
          <%= link_to 'Edit', edit_tip_path(tip), class: 'button tiny radius success' %>
          <%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny radius alert' %></td>
          



          
          <% end %>

          <% end %>
          
        </tr>
        
        
      </tbody>
   </table>




